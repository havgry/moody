{
  "name": "moody",
  "version": "1.0.0",
  "description": "Mood detection thingie with Watson",
  "main": "server.js",
  "watch": {
    "html-preprocess-watch": {
      "patterns": "assets/html/index.html",
      "quiet": true
    }
  },
  "scripts": {
    "browsersync-watch": "browser-sync start --files server.js assets/dist/* --proxy localhost:1337 --no-notify",
    "css-compile-prefix": "node-sass assets/scss --output assets/dist/css && postcss --use autoprefixer assets/dist/css/main.css --dir assets/dist/css",
    "css-minify": "cleancss assets/dist/css/main.css --output assets/dist/css/main.min.css --level 2",
    "css-watch": "node-sass --watch assets/scss --output assets/dist/css --output-style nested --source-comments",
    "js-bundle": "browserify assets/js/main.js --outfile assets/dist/js/main.js",
    "js-bundle-watch": "watchify assets/js/main.js --outfile 'exorcist assets/dist/js/main.js.map > assets/dist/js/main.js' --debug",
    "html-preprocess": "preprocess assets/html/index.html --output-file assets/dist/index.html",
    "html-preprocess-watch": "NODE_ENV=development npm run html-preprocess",
    "build": "mkdirp assets/dist/js assets/dist/css && concurrently 'npm run css-compile-prefix' 'npm run js-bundle' 'npm run html-preprocess'",
    "watch": "concurrently 'npm run css-watch' 'npm run js-bundle-watch' 'npm run browsersync-watch' 'npm-watch'",
    "postinstall": "npm run build && npm run css-minify",
    "dev": "NODE_ENV=development npm run build && npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magnushavgry/moody.git"
  },
  "keywords": [
    "Mood detection",
    "Watson",
    "IBM",
    "Bluemix"
  ],
  "author": "Magnus Havgry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magnushavgry/moody/issues"
  },
  "homepage": "https://github.com/magnushavgry/moody#readme",
  "dependencies": {
    "chart.js": "^2.4.0",
    "express": "^4.14.1",
    "watson-developer-cloud": "^2.15.5",
    "preprocess": "^3.1.0",
    "preprocess-cli-2": "^2.0.0",
    "browserify": "^14.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "browser-sync": "^2.18.7",
    "clean-css-cli": "^4.0.0",
    "concurrently": "^3.1.0",
    "dotenv": "^4.0.0",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0",
    "normalize.css": "^5.0.0",
    "postcss": "^5.2.11",
    "postcss-cli": "^2.6.0",
    "watchify": "^3.9.0",
    "npm-watch": "^0.1.8"
  }
}
